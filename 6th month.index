  <script>
    /* Floating hearts + emojis */
    const canvas = document.getElementById("heartsCanvas");
    const ctx = canvas.getContext("2d");
    let floaters = [];
    const colors = ["#ff6b81", "#ff4757", "#ff7f50", "#ffa502"];
    const emojis = ["üíö", "üå∏", "üêª", "üíï", "üçì", "‚ú®", "üíå"];

    function resizeCanvas() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
    function createFloater() {
      const x = Math.random() * canvas.width;
      const y = canvas.height + 30;
      const type = Math.random() < 0.6 ? "heart" : "emoji";
      const size = Math.random() * 10 + 15;
      const speed = Math.random() * 1.5 + 0.5;
      if (type === "heart") {
        const color = colors[Math.floor(Math.random() * colors.length)];
        floaters.push({ type, x, y, size, speed, color });
      } else {
        const emoji = emojis[Math.floor(Math.random() * emojis.length)];
        const opacityPhase = Math.random() * Math.PI * 2;
        floaters.push({ type, x, y, size, speed, emoji, opacityPhase });
      }
    }
    function drawFloaters() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      for (let i = 0; i < floaters.length; i++) {
        const f = floaters[i];
        if (f.type === "heart") {
          ctx.fillStyle = f.color;
          ctx.beginPath();
          ctx.moveTo(f.x, f.y);
          ctx.bezierCurveTo(f.x - f.size, f.y - f.size, f.x - f.size*2, f.y + f.size, f.x, f.y + f.size*2);
          ctx.bezierCurveTo(f.x + f.size*2, f.y + f.size, f.x + f.size, f.y - f.size, f.x, f.y);
          ctx.fill();
        } else {
          const twinkle = (Math.sin(Date.now() / 300 + f.opacityPhase) + 1) / 2;
          ctx.globalAlpha = 0.5 + twinkle * 0.5;
          ctx.font = `${f.size}px sans-serif`;
          ctx.fillText(f.emoji, f.x, f.y);
          ctx.globalAlpha = 1.0;
        }
        f.y -= f.speed;
        if (f.y < -30) floaters.splice(i, 1);
      }
    }
    function loop() {
      createFloater();
      drawFloaters();
      requestAnimationFrame(loop);
    }
    resizeCanvas();
    window.addEventListener("resize", resizeCanvas);
    loop();

    /* Typewriter */
    const message = "Every day with you feels like magic, Babiii üíö. You are my forever and always.";
